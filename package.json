{
  "name": "project-template",
  "version": "1.0.0",
  "description": "Capstone Project Template ",
  "repository": {
    "type": "git",
    "url": "https://autocode.git.epam.com/campus_javascript/capstone-project/project-template.git"
  },
  "scripts": {
    "compile": "sass src/scss:dist/css",
    "watch:sass": "sass --watch src/scss:dist/css",
    "serve": "lite-server",
    "dev": "npm run compile && npm run serve",
    "dev:watch": "npm run compile && npm-run-all --parallel watch:sass serve"
  },
