{
  "port": 3000,
  "server": {
    "baseDir": "./src",
    "index": "index.html",
    "routes": {
      "/dist": "./dist",
      "/src": "./src"
    }
  },
  "files": [
    "dist/css/**/*.css",
    "src/js/**/*.js",
    "src/**/*.html"
  ],
  "watchOptions": {
    "ignoreInitial": true,
    "ignored": [
      "node_modules/**",
      "dist/**/*.map",
      ".git/**",
      "*.json",
      "*.md"
    ]
  },
  "open": true,
  "notify": false,
  "ui": false,
  "logLevel": "info",
  "reloadDebounce": 300
}